{
  "name": "spring-6-webapp",
  "version": "1.0.0",
  "description": "A Spring Boot 6 Web API",
  "main": "index.js",
  "scripts": {
    "test": "npm run swagger:lint -- openapi.yml",
    "swagger:up": "docker compose -f src/main/docker/swagger.yml up -d",
    "swagger:down": "docker compose -f src/main/docker/swagger.yml down",
    "swagger:lint": "docker run --rm -v ${PWD}/src/main/resources/openapi:/spec redocly/cli lint",
    "prepare": "is-ci || husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timothystone/spring-6-webapp.git"
  },
  "keywords": [
    "swagger",
    "openapi",
    "spring",
    "spring-boot",
    "api"
  ],
  "author": "Timothy Stone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timothystone/spring-6-webapp/issues"
  },
  "homepage": "https://github.com/timothystone/spring-6-webapp#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0"
  }
}
